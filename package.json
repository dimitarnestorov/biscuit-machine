{
	"name": "biscuit-machine",
	"version": "0.1.0",
	"private": true,
	"homepage": "https://dimitarnestorov.github.io/biscuit-machine",
	"dependencies": {
		"d3-ease": "^2.0.0",
		"mobx": "^5.15.6",
		"mobx-react-lite": "^2.2.2",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-spring": "^9.0.0-rc.3",
		"react-transition-group": "^4.4.1",
		"uuid": "^8.3.0",
		"web-vitals": "^0.2.4"
	},
	"devDependencies": {
		"@react-spring/mock-raf": "^1.1.1",
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.0.4",
		"@testing-library/react-hooks": "^3.4.1",
		"@testing-library/user-event": "^12.1.4",
		"@types/d3-ease": "^1.0.9",
		"@types/jest": "^26.0.13",
		"@types/node": "^12.0.0",
		"@types/react": "^16.9.49",
		"@types/react-dom": "^16.9.8",
		"@types/react-transition-group": "^4.4.0",
		"@types/sinonjs__fake-timers": "^6.0.1",
		"@types/uuid": "^8.3.0",
		"codecov": "^3.7.2",
		"gh-pages": "^3.1.0",
		"husky": "^4.3.0",
		"jest-emotion": "^10.0.32",
		"lint-staged": "^10.4.0",
		"node-sass": "^4.14.1",
		"prettier": "^2.1.2",
		"react-scripts": "4.0.0-next.98",
		"react-test-renderer": "^16.13.1",
		"typescript": "~4.0.2"
	},
	"scripts": {
		"predeploy": "npm run build",
		"deploy": "gh-pages -d build",
		"prettier": "prettier --ignore-path .gitignore \"**/*.+(js|ts|tsx|json|scss|css|html|md)\"",
		"format": "npm run prettier -- --write",
		"check-format": "npm run prettier -- --list-different",
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject"
	},
	"husky": {
		"hooks": {
			"pre-commit": "bash pre-commit.sh"
		}
	},
	"lint-staged": {
		"**/*.+(js|ts|tsx|json|css|html|md)": [
			"npm run check-format",
			"npm run test -- --watchAll=false --coverage --findRelatedTests"
		]
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{js,ts,tsx}"
		],
		"coveragePathIgnorePatterns": [
			"/node_modules/",
			"/src/index.tsx",
			"/src/reportWebVitals.ts",
			"/src/testUtils.ts",
			"/src/react-app-env.d.ts"
		],
		"coverageThreshold": {
			"global": {
				"branches": 100,
				"functions": 100,
				"lines": 100,
				"statements": 100
			}
		},
		"moduleNameMapper": {
			"^.+\\.module\\.(css|sass|scss)$": "<rootDir>/src/BiscuitMachine/mockCSSModules.ts"
		},
		"snapshotSerializers": [
			"jest-emotion"
		]
	},
	"prettier": {
		"semi": false,
		"trailingComma": "all",
		"tabWidth": 4,
		"printWidth": 120,
		"singleQuote": true,
		"useTabs": true
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
